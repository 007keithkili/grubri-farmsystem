{% extends "base.html" %}
{% block title %}Medical Record{% endblock %}
{% block page_title %}Medical Record{% endblock %}
{% block page_subtitle %}Treatment details{% endblock %}

{% block content %}
<div class="content-card">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Medical M-{{ record.id }}</h4>
    <div>
      <a class="btn btn-warning" href="{{ url_for('edit_medical', medical_id=record.id) }}">Edit</a>
      <a class="btn btn-secondary" href="{{ url_for('medical') }}">Back</a>
    </div>
  </div>

  <dl class="row">
    <dt class="col-sm-3">Animal ID</dt><dd class="col-sm-9">{{ record.animal_id }}</dd>
    <dt class="col-sm-3">Treatment Date</dt><dd class="col-sm-9">{{ record.treatment_date }}</dd>
    <dt class="col-sm-3">Condition</dt><dd class="col-sm-9">{{ record.condition }}</dd>
    <dt class="col-sm-3">Treatment</dt><dd class="col-sm-9">{{ record.treatment }}</dd>
    <dt class="col-sm-3">Veterinarian</dt><dd class="col-sm-9">{{ record.veterinarian or '-' }}</dd>
    <dt class="col-sm-3">Next Checkup</dt><dd class="col-sm-9">{{ record.next_checkup or '-' }}</dd>
    <dt class="col-sm-3">Notes</dt><dd class="col-sm-9">{{ record.notes or '-' }}</dd>
    <dt class="col-sm-3">Created At</dt><dd class="col-sm-9">{{ record.created_at }}</dd>
  </dl>
</div>
{% endblock %}
