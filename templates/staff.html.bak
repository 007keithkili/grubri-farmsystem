{% extends "base.html" %}

{% block title %}Staff Management{% endblock %}
{% block page_title %}Staff Management{% endblock %}
{% block page_subtitle %}Manage farm staff and assignments{% endblock %}

{% block content %}
<div class="content-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Staff Directory</h4>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStaffModal">
            <i class="fas fa-user-plus"></i> Add Staff Member
        </button>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stat-card" style="border-top-color: #3498db;">
                <i class="fas fa-users"></i>
                <h3>{{ total_staff }}</h3>
                <p>Total Staff</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card" style="border-top-color: #2ecc71;">
                <i class="fas fa-user-check"></i>
                <h3>{{ active_today }}</h3>
                <p>Active Today</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card" style="border-top-color: #f39c12;">
                <i class="fas fa-user-clock"></i>
                <h3>{{ on_leave }}</h3>
                <p>On Leave</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card" style="border-top-color: #9b59b6;">
                <i class="fas fa-tasks"></i>
                <h3>{{ active_tasks }}</h3>
                <p>Active Tasks</p>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Staff ID</th>
                    <th>Name</th>
                    <th>ID No</th>         <!-- NEW: national/employee ID column -->
                    <th>Position</th>
                    <th>Department</th>
                    <th>Contact</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if staff_members %}
                    {% for staff in staff_members %}
                    <tr>
                        <td>STF-{{ staff.id }}</td>
                        <td>{{ staff.first_name }} {{ staff.last_name }}</td>
                        <td>{{ staff.id_number or '' }}</td>   <!-- NEW cell -->
                        <td>{{ staff.position }}</td>
                        <td>{{ staff.department if staff.department else 'N/A' }}</td>
                        <td>{{ staff.phone }}</td>
                        <td>
                            {% set s = (staff.status or '').lower() %}
                            {% if s == 'active' %}
                                <span class="badge bg-success">Active</span>
                            {% elif s in ['on leave', 'leave'] %}
                                <span class="badge bg-warning text-dark">On Leave</span>
                            {% elif s in ['inactive', 'suspended'] %}
                                <span class="badge bg-secondary">Inactive</span>
                            {% else %}
                                <span class="badge bg-info">{{ staff.status or 'N/A' }}</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ url_for('view_staff', staff_id=staff.id) }}" class="btn btn-sm btn-info" title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ url_for('edit_staff', staff_id=staff.id) }}" class="btn btn-sm btn-warning" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">No staff members found.</td>  {# updated colspan to match columns #}
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>

<!-- Add Staff Modal -->
<div class="modal fade" id="addStaffModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Staff Member</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="{{ url_for('add_staff') }}">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">First Name *</label>
                                <input type="text" class="form-control" name="first_name" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Last Name *</label>
                                <input type="text" class="form-control" name="last_name" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Position *</label>
                                <input type="text" class="form-control" name="position" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Department *</label>
                                <select class="form-select" name="department" required>
                                    <option value="">Select Department</option>
                                    <option value="management">Management</option>
                                    <option value="medical">Medical</option>
                                    <option value="nutrition">Nutrition</option>
                                    <option value="breeding">Breeding</option>
                                    <option value="sales">Sales</option>
                                    <option value="maintenance">Maintenance</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Email Address</label>
                                <input type="email" class="form-control" name="email">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Phone Number *</label>
                                <input type="tel" class="form-control" name="phone" required>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <textarea class="form-control" name="address" rows="2"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" name="dob">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Date Employed</label>
                                <input type="date" class="form-control" name="date_employed">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Staff Member</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
